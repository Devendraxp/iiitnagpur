        <!-- Content Section (Below and Behind on Mobile, Right on Desktop) -->
        <div class="w-full lg:w-1/2 drop-shadow-sm py-8 pt-10 pl-8 px-6 md:py-2 md:px-8 lg:px-18 bg-white flex flex-col justify-center relative z-0 lg:z-auto mt-[-150px] lg:mt-0">
